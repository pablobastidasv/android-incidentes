<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.syshelp.app.activities.MainActivity"
    android:background="#fff5f5f7">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6c1b7e"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100pt"
        android:weightSum="1"

        >



        <Button
            android:text="Nueva Incidencia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickCrearInc"
            android:layout_gravity="center"
            style="@style/ButtonStyle"
            android:layout_weight="0.07" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Consultar tu Incidencia"
            android:onClick="onClickConsultarInc"
            style="@style/ButtonStyle"
            android:layout_weight="0.07"

            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ayuda"
            android:onClick="onClickConsultarInc"
            style="@style/ButtonStyle"
            android:layout_weight="0.07"

            />

    </LinearLayout>


</RelativeLayout>

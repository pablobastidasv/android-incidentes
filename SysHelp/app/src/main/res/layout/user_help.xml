<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.syshelp.app.UserHelp"
    android:background="#fff5f5f7">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff5f5f7"
        android:src="@drawable/logo_big"
        android:layout_centerHorizontal="true"

        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100pt"
        android:weightSum="1"

        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="¿Como crear una incidencia?"
            style="@style/Label"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txthelpcrear"
            style="@style/Text"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="¿Como consultar mi incidencia?"
            style="@style/Label"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txthelpconsul"
            style="@style/Text"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcontact"
            style="@style/Text"

            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:onClick="onClickVolverMain"
            style="@style/ButtonStyle"
            android:layout_weight="0.07"

            />

    </LinearLayout>


</RelativeLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff33103e</item>
        <item name="android:textSize">25dp</item>

        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitule">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff33103e</item>
        <item name="android:textSize">20dp</item>

    </style>


    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff030103</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="BackgroundLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#ff40e4b2</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#ff551563</item>
        <item name="android:background">#ff40e4b2</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>
